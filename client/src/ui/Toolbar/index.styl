
.toolbar {
  padding: 0 10px;
  background: #444;
  color: #888;
  height: 30px;
  line-height: 30px;
  a {
    color: inherit;
    &:hover {
      color: #ccc;
    }
  }
  em {
    color: #ccc;
  }
  .action {
    color: #ccc;
    background: #111;
    padding: 1px 8px;
    border-radius: 5px;
    &:hover {
      color: #eee;
      background: #000;
    }
    &.disabled, &.disabled:hover {
      color: #555;
      background: #333;
    }
  }
}
