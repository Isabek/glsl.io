
starred-color-off = #333
starred-color-on = #FC6
starred-color-off-action = #fff
starred-color-on-action = #fff
starred-color-loading = mix(starred-color-off, starred-color-on)

.vignette {
  position: relative;
  user-select: none;
  outline: 1px solid #000;

  &.mode-hover:hover, &.swiping {
    outline: 1px solid #FC6;

    .overlay, .overlay .cursor {
      display: block;
    }
  }

  canvas {
    background: #000;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .overlay {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 2;
    .cursor {
      display: none;
      z-index: 1;
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 2px;
      background: #FC6;
      box-shadow: 0px 0px 4px rgba(255,150,80,1);
    }
    a {
      text-decoration: none;
      color: #eee;
      z-index: 2;
      &:hover {
        color: #fff;
      }
    }
  }

  a.transition-comments {
    position: absolute;
    right: 5px;
    bottom: 5px;
    padding: 5px;
    z-index: 4;
  }

  .transition-star {
    position: absolute;
    top: 0px;
    right: 0px;
    padding: 1px 6px;
    border-radius: 2px;
    background: rgba(0,0,0,0);
    color: starred-color-off;
    z-index: 3;
    cursor: pointer;

    i {
      margin-left: 2px;
    }

    &.starred {
      color: starred-color-on;
    }
    &.active {
      color: starred-color-loading !important;
    }

    &:hover {
      background: rgba(0,0,0,1);
      color: starred-color-on-action;
    }
    &.starred:hover {
      color: starred-color-off-action;
    }
  }

  .title {
    position: absolute;
    bottom: 2px;
    left: 6px;
    color: #eee;
    font-size: 0.8em;
    width: 99%;
    overflow: hidden;
    white-space: nowrap;
  }

}

.vignette:hover .overlay,
.vignette.swiping .overlay {
}

