.texture-picker {
  vertical-align: middle;
  position: relative;
  .picker {
    &:not(.visible) {
      display: none;
    }
    position: absolute;
    left: 100%;
    top: -75px;
    width: 150px;
    height: 150px;
    background: #fff;
    border-radius: 4px;
    &:before {
      content: " ";
      position: absolute;
      top: 67px;
      left: -32px;
      border: 16px solid;
      border-color: transparent white transparent transparent;
    }
    .picker-container {
      padding: 10px 0;
      overflow: auto;
    }
  }
  .picker-input {
    width: 80%;
    background: #fff;
    color: #000;
    display: inline-block;
    border-radius: 3px;
    line-height: 20px;
    font-size: 0.6em;
    padding: 1px 8px;
    overflow: ellipsis;
  }
  .overview {
    width: 20%;
    display: inline-block;
  }
  img {
    margin-left: 8px;
  }
}
