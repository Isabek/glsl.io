.glsl-contextual-help {
  .glsl-documentation {
    p {
      margin: 2px 0;
    }
    .glsl-token-type-name {
      margin-bottom: 2px;
      overflow: auto;
      .glsl-token-type {
        float: right;
        margin-right: 0.5em;
      }
      .glsl-token-name {
        float: left;
      }
    }
    .glsl-token-type {
      font-weight: bold;
      text-transform: uppercase;
      font-size: 0.5em;
      background: #000;
      padding: 1px 3px;
      border-radius: 2px;
    }
    .glsl-token-name {
      font-family: monospace;
    }
    .glsl-token-usage {
      width: 100%;
      box-sizing: border-box;
      font-size: 0.8em;
    }
    .glsl-token-description {
      font-weight: 300;
      font-style: italic;
      font-size: 0.8em;
      padding: 0.5em 1em 0 0;
    }
  }
}
