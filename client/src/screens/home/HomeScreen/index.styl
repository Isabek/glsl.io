.home-screen {
  font-weight: 300;
  display: inline-block;
  margin-bottom: 20px;
  
  .vignette {
    display: inline-block;
  }
  .fps {
    display: inline-block;
    background: #000;
    border-radius: 2px;
    padding: 0 4px;
  }
  .logo {
    font-weight: bold;
    span:first-child {
      color: #000;
    }
    span:last-child {
      color: #000;
      /*color: #da0;*/
    }
  }
  .duration {
    span.value {
      float: right;
      font-family: monospace;
    }
    input {
      width: 100%;
      display: block;
    }
  }
  h2 {
    .logo {
      font-weight: bold;
    }
    font-weight: normal;
  }
  h3 {
    font-size: 2em;
    line-height: 2em;
  }
  h2, h3 {
    clear: both;
  }
  div.visual {
    vertical-align: top;
    display: inline-block;
    width: 520px;
    margin: 0 auto;
    padding: 5px 0px;
  }
  div.page {
    text-align: left;
    vertical-align: top;
    display: inline-block;
    width: 512px;
    padding: 10px 0 10px 40px;
    nav {
      text-align: center;
      font-size: 32px;
      padding: 20px 0;
      a {
        padding: 0px 8px;
        border-radius: 4px;
        &:first-child {
          margin-left: 0;
        }
        color: #aaa;
        &:hover {
          color: #666;
        }
        &.current {
          color: #ea5;
        }
      }
    }
    .content {
      min-height: 300px;
      header {
        font-weight: bold;
        margin-bottom: 4px;
      }
    }
    .pager {
      margin-top: 40px;
    }
  }
}
