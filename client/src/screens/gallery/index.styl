#toolbar .new-transition {
  float: right;
  color: #ccc;
  &:hover {
    color: #fff;
  }
}

div.gallery {
  padding: 10px 10px 0 10px;
  min-height: 40px;

  > .vignette {
    display: inline-block;
    margin-right: 10px;
    margin-bottom: 10px;
    width: 300px;
    height: 200px;
  }

  .vignette {
    border-color: #000;
    border-radius: 2px;
    cursor: pointer;
  }

  canvas {
    border-radius: 2px;
  }
  .overlay {
    border-radius: 2px;
    overflow: hidden;
  }
}
