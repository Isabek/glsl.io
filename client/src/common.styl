
html {
  font-family: Nunito, sans-serif;
}

html, body {
  min-height: 100%;
  padding: 0;
  margin: 0;
  background: #333;
  color: #fff;

  min-width: 860px;
}

* {
  user-select: none;
}

a {
  color: #ccc;
  text-decoration: none;
  &:hover {
    color: #fff;
  }
}

.logo {
  text-decoration: none;
  span:first-child {
    color: #fff;
  }
  span:last-child {
    color: #FC6;
  }
}

#loading {
  display: none;
  text-align: center;
  margin: 50px;
  height: 300px;
  font-size: 2em;
}

/* FIXME: split out into the different components */

/* "Toolbar" component? */
.toolbar {
  padding: 0 10px;
  background: #444;
  color: #888;
  height: 30px;
  line-height: 30px;
  a {
    color: inherit;
    &:hover {
      color: #ccc;
    }
  }
  em {
    color: #ccc;
  }
  .action {
    color: #ccc;
    background: #111;
    padding: 1px 8px;
    border-radius: 5px;
    &:hover {
      color: #eee;
      background: #000;
    }
    &.disabled, &.disabled:hover {
      color: #555;
      background: #333;
    }
  }
}

